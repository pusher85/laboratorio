<div class="row">
	<div class="col s12">
		<span class="center-align"><h3>Anagrafica Clienti</h3></span>
	</div>
</div>

<div class="row">
	<div class="col s3">
		<%= link_to '<i class="material-icons" title="Aggiungi Cliente">add_circle_outline</i>'.html_safe, new_clienti_path, class: 'btn-floating btn-small waves-effect waves-light green' %>
	</div>	
</div>

<div class="divider"></div>

<div class="row">
	<div class="col s12">
		<table class="highlight centered">
			<thead>
			  <tr>
				<th><i class="material-icons">perm_identity</i>Nome</th>
				<th><i class="material-icons">drafts</i>Email</th>
				<th><i class="material-icons">phone</i>Telefono</th>
				<th>Visualizza</th>
				<th>Modifica</th>
				<th>Elimina</th>
				<th>Contratti</th>
			  </tr>
		  	</thead>
		 
		 	<tbody>
		  <% @clienti.each do |cliente| %>
			<tr>
				<td><div class="truncate"><%= cliente.nome %></div></td>
				<td><div class="truncate"><%= cliente.email %></div></td>
				<td><div class="truncate"><%= cliente.telefono %></div></td>
				<td><%= link_to '<i class="material-icons" title="visualizza">pageview</i>'.html_safe, clienti_path(cliente), class: 'btn-floating btn-small waves-effect waves-light green' %></td>
				<td><%= link_to '<i class="material-icons" title="modifica">open_in_browser</i>'.html_safe, edit_clienti_path(cliente), class: 'btn-floating btn-small waves-effect waves-light orange' %></td>
				<td><%= link_to '<i class="material-icons" title="elimina">delete</i>'.html_safe, clienti_path(cliente),
				  method: :delete,
				  data: { confirm: 'Sicuro di voler eliminare il cliente? Non Ã¨ reversibile' }, class: 'btn-floating btn-small waves-effect waves-light red' %></td>
				<td><%= link_to '<i class="material-icons" title="contratti">book</i>'.html_safe, clienti_contrattis_path(cliente), class: 'btn-floating btn-small waves-effect waves-light green' %></td>  
			</tr>
		  <% end %>
		  	</tbody>
		</table>
	</div>
</div>
 
	
