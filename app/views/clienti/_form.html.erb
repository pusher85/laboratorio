<%= form_for :clienti, url: clienti_index_path, class: "col s12" do |f| %>
    

    <% if @clienti.errors.any? %>
    <div class="row">
      <div class="col s12">
        <div id="error_explanation">
          <h4><%= pluralize(@clienti.errors.count, "error") %> impediscono il salvataggio del cliente: </h4>
          <ul class="collection">
            <% @clienti.errors.full_messages.each do |msg| %>
              <li class="collection-item"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <% end %>


    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <%= f.label :nome %><br><%= f.text_field :nome %>
      </div>
    </div>
  

  <div class="row">
    <div class="input-field col s6">
      <i class="material-icons prefix">subtitles</i>
      <%= f.label :codfisc %><br><%= f.text_field :codfisc %>
    </div>

    <div class="input-field col s6">
      <i class="material-icons prefix">work</i>
      <%= f.label :piva %><br><%= f.text_field :piva %>
    </div>  
  </div>
  

  <div class="row">
    <div class="input-field col s6">
      <i class="material-icons prefix">phone</i>
      <%= f.label :telefono %><br><%= f.text_field :telefono %>
    </div>

    <div class="input-field col s6">
      <i class="material-icons prefix">email</i>
      <%= f.label :email %><br><%= f.text_field :email %>
    </div>
  </div>


  
  <div class="row">
    <div class="input-field col s12">
      <i class="material-icons prefix">speaker_notes</i>
      <%= f.label :note %><br><%= f.text_area :note, class: 'materialize-textarea' %>
    </div>
  </div>
 
  <%= f.submit %>
	<%#= f.submit 'Salva', :class => 'btn waves-effect waves-light'  %>
  
<% end %>