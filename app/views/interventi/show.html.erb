<div class="row">
	<div class="col s12 center-align">
		<h4>Dettaglio intervento</h4>
		<h5>Cliente: <%= @clienti.nome %></h5>
	</div>
</div>

<div class="divider"></div>

<div class="row">
	<div class="col s6 offset-s6">
		<div style="position: relative;">
		  	<div class="fixed-action-btn horizontal" style="position: absolute; display: inline-block; right: 24px;">
		    	<a class="btn-floating btn-large red">
		      	<i class="large mdi-navigation-menu"></i>
		    	</a>
		    <ul>
		    	<li><%= link_to '<i class="material-icons" title="Modifica">mode_edit</i>'.html_safe, edit_clienti_interventi_path(:id => @interventi.id), class: 'btn-floating green' %></li>
		    	<li><%= link_to '<i class="material-icons" title="Elimina">delete</i>'.html_safe, clienti_interventi_path(:id => @interventi.id), method: :delete, data: { confirm: 'Sicuro di voler eliminare?' }, class: 'btn-floating red' %></li>
		    	<li><%= link_to '<i class="material-icons" title="Invia Comunicazione">textsms</i>'.html_safe, new_clienti_interventi_comunicazioni_path(:interventi_id => @interventi.id), class: 'btn-floating green' %></li>
		    </ul>
		  </div>
		</div>
	</div>
</div>

<blockquote>
<div class="row">
	<div class="col s6">
	  <strong>Data Intervento: </strong>
	  <%= @interventi.data.strftime("%d/%m/%Y") %>
  	</div>
</div>

<div class="row">
	<div class="col s6">
		<strong>Durata: </strong>
		<%= @interventi.durata %> ore
	</div>
</div>

<div class="row">
	<div class="col s6">
		<strong>Descrizione: </strong>
		<%= @interventi.intervento %>
	</div>
</div>


<div class="row">
	<div class="col s6">
		<strong>Annotazioni: </strong>
		<%= @interventi.note %>
	</div>
</div>

</blockquote>

<div class="divider"></div>
<br>

<div class="row">
	<ul class="lista-pulsanti">
		<li><%= link_to '<i class="material-icons left">fast_rewind</i>Indietro'.html_safe, clienti_interventi_index_path(@clienti.id), class: 'waves-effect waves-light btn' %></li>
	</ul>
</div>




